{

    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "TherookHUD Data Schema",
    "type" :"object",
    "required": [
      "username",
      "ratings",
      "recent_games",
      "last_updated"
    ],
    "properties": {
      "username": {
        "type":"string"
      },
      "ratings": {
        "type":"object",
        "properties": {
            "rapid": {"type":"integer"},
            "blitz": {"type":"integer"},
            "bullet": {"type":"integer"}
        }
      }  
    },
    "recent_games": {
      "type": "array",
      "maxItems": 5,
      "items": {
        "type": "object",
        "required": ["result", "rating_change", "opponent"],
        "properties": {
          "result": {
            "type": "string",
            "enum": ["win", "loss", "draw"]
          },
          "rating_change": {
            "type": "integer"
          },
          "opponent": {
            "type": "string"
          }
        }
      }
    },
    "last_updated": {
      "type": "string",
      "format": "date-time"
    }
}
    